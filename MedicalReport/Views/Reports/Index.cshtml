@model IEnumerable<DataService.Report>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient.patientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reportType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reportDescription)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.patientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reportType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.reportDescription)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.reportId }) |
                @Html.ActionLink("Details", "Details", new { id=item.reportId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.reportId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
